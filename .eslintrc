{
    "env": {
        "node": true,
        "browser": true,
        "amd": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2017,
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "plugins": ["react"],
    "rules": {
        "linebreak-style": ["warn", "unix"],
        "quotes": ["warn", "single"],
        "semi": ["warn", "always"],
        "no-unused-vars": 0,
        "no-console": "off",
        "no-undef": "off"
    },
    "overrides": [
        {
            "files": ["resources/js/*.js", "public/js/*.js"],
            "excludedFiles": "*.bundlejs"
        }
    ]
}
